<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">
	 
	<context:annotation-config/>
	<context:component-scan base-package="innova4b.ejercicio1"></context:component-scan>
	
	<bean id="finderFromText" class="innova4b.ejercicio1.FinderFromText">
		<constructor-arg name="texto" value="resources/movies1.txt" />
	</bean>
	
	<bean id="dbConfigurator" class="innova4b.ejercicio1.DBConfigurator">
		<constructor-arg name="url" value="jdbc:mysql://localhost/movies" />
		<constructor-arg name="user" value="root" />
		<constructor-arg name="password" value="root" />
	</bean>

</beans>
